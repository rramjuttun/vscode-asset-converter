{
  "name": "upload-extension",
  "displayName": "upload-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "upload-extension.upload",
        "title": "Upload to IPFS"
      },
      {
        "command": "upload-extension.uploadAndMint",
        "title": "Upload Folder and Deploy ERC721 Contract"
      },
      {
        "command": "upload-extension.testCommand",
        "title": "Developer Test Commnd"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "upload-extension.upload",
          "when": "resourceScheme == 'file' && explorerResourceIsFolder"
        },
        {
          "command": "upload-extension.uploadAndMint",
          "when": "resourceScheme == 'file' && explorerResourceIsFolder"
        },
        {
          "command": "upload-extension.testCommand",
          "when": "resourceScheme == 'file' && explorerResourceIsFolder"
        }
      ],
      "commandPalette": [
        {
            "command": "upload-extension.upload",
            "when": "false"
        },
        {
          "command": "upload-extension.uploadAndMint",
          "when": "false"
        } 
    ]
  }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0",
    "fs-extra": "^11.1.1",
    "web3": "^4.0.2"
  }
}
